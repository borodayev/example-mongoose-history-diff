{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                     
    "declaration": true,                   
    "outDir": "build/",                     
    "removeComments": true,                
    "strict": true,                        
    "noImplicitAny": true,
    "strictNullChecks": true,            
    "strictFunctionTypes": true,         
    "strictBindCallApply": true,          
    "strictPropertyInitialization": true, 
    "noImplicitThis": true,               
    "alwaysStrict": true,                 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [ "./types", "./node_modules/@types"]
  },
  "include": ["./src/", "types"],
}
